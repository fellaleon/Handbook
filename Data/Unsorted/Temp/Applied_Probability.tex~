\move (0 -1) \avec (0 -0.6)
\move (1 0) \avec (1 -0.4)
\move (1 -1) \avec (1 -0.6)
\move (2 0) \avec (2 -0.4)
\move (2 -1) \avec (2 -0.6)
\move (3 0) \avec (3 -0.4)
\move (3 -1) \avec (3 -0.6)

\move (0 0) \lvec (1 0)
\move(0 0) \avec(0.5 0)
\move (1 0) \lvec (2 0)
\move(1 0) \avec(1.5 0)
\move (2 0) \lvec (3 0)
\move(2 0) \avec(2.5 0)

\move (0 -1) \lvec (1 -1)
\move(1 -1) \avec(0.5 -1)
\move (1 -1) \lvec (2 -1)
\move(2 -1) \avec(1.5 -1)
\move (2 -1) \lvec (3 -1)
\move(3 -1) \avec(2.5 -1)

\move (0 0)\node 
